@model JYTGameStore.Models.CreditCard

<div class="container p-3">

    <ol class="breadcrumb">
        JYTGameStore &gt; Member &gt;&nbsp;
        <span class="font-weight-bold">Credit Card</span>
    </ol>

    <h1>@ViewBag.Title</h1>
    <hr />

    <div class="m-2">&nbsp;</div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CreditCardId" />
        <input type="hidden" asp-for="userId" />

        <div class="row m-2">
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCNumber" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    <input asp-for="CCNumber" class="form-control w-50" placeholder="16 digits number" />
                    <span asp-validation-for="CCNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCMonth" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    <input asp-for="CCMonth" class="form-control w-25" placeholder="2 digits number" />
                    <span asp-validation-for="CCMonth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCYear" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    <input asp-for="CCYear" class="form-control w-25" placeholder="2 digits number" />
                    <span asp-validation-for="CCYear" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCPIN" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    <input asp-for="CCPIN" class="form-control w-25" placeholder="3 digits number" />
                    <span asp-validation-for="CCPIN" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="m-2">&nbsp;</div>

        <div class="row m-1">
            <div class="col-3">
                <a asp-action="Index" class="btn btn-info w-30">Back to Credit Card Lists</a>
            </div>
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-primary w-auto" value="Save Credit Card" />
            </div>
            <div class="col-3">&nbsp;</div>
        </div>
        <div class="p-3"></div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
