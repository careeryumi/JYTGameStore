@model JYTGameStore.Models.CreditCard

<div class="container p-3">

    <ol class="breadcrumb">
        JYTGameStore &gt; Member &gt;&nbsp;
        <span class="font-weight-bold">Credit Card</span>
    </ol>

    <h1>@ViewBag.Title</h1>
    <hr />

    <h3>Are you sure you want to delete this credit card?</h3>
    <hr />

    <form method="post" asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CreditCardId" />
        <input type="hidden" asp-for="userId" />

        <div class="row m-2">
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCNumber" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.CCNumber)
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCMonth" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.CCMonth)
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCYear" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.CCYear)
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-3 text-right">
                    <label asp-for="CCPIN" class="control-label font-weight-bold"></label>
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.CCPIN)
                </div>
            </div>
        </div>

        <div class="m-2">&nbsp;</div>

        <div class="row m-1">
            <div class="col-3">
                <a asp-action="Index" class="btn btn-info w-30">Back to Credit Card Lists</a>
            </div>
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-danger w-auto" value="Delete Credit Card" />
            </div>
            <div class="col-3">&nbsp;</div>
        </div>
        <div class="p-3"></div>

    </form>
</div>
