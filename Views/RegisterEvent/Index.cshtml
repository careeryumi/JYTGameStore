@model IEnumerable<JYTGameStore.Models.RegisterEvent>

@{
    ViewData["Title"] = "Index - Event";

    Boolean isAdmin = User.IsInRole("Admin");
    Boolean isEmployee = User.IsInRole("Employee");
    Boolean isMember = User.IsInRole("Member");

}

<div class="row pt-lg-5 text-lg-center">
    <div class="col-6 bg-info">
        <h2 class="text-light">My Event List</h2>
    </div>
</div>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                <a asp-controller="Event" asp-action="Details" asp-route-eventId="@item.Event.EventId">@Html.DisplayFor(modelItem => item.Event.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Publisher)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
