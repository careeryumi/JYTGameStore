@model JYTGameStore.Models.GameCreate

@*It finds post action method creat*@
<form enctype="multipart/form-data" method="post" asp-action="Create">
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Game here</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GameName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="GameName" class="form-control" />
                        <span asp-validation-for="GameName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryID"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.GameCategoryID"></select>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ImageUpload">Game Image</label>
                    </div>
                    <div class="col-8">
                        <div class="custom-file">
                            <input asp-for="ImageUpload" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose Game Image File...</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GameDescription">Game Description</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="GameDescription" required class="form-control" rows="10"></textarea>
                        <span asp-validation-for="GameDescription" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create a game" />
                        </div>
                        <div class="col">
                            @*use the same controller so no specify asp-controller*@
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</form>

@*Client side validation*@
@section Scripts{
    @{ <partial name="_ValidationScriptsPartial"} /> }
    <script>
        // Show file name
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });
    </script>
}