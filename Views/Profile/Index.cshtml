@model Profile

@{
    ViewBag.Title = @User.Identity.Name + " 's Profile";
}

<div class="row p-3">
    <div class="col-6">
        <h2 class="text-info">@User.Identity.Name's Profile</h2>
    </div>
    <div class="col-6 text-right">&nbsp;</div>
</div>
<div class="row border p-3">
    <div class="col-md-12">
        <form>
            <div class="col-12 text-lg-right">
                <a asp-controller="Profile" asp-action="@ViewData["exist"]" class="btn btn-success">Edit My Profile</a>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" readonly class="form-control" value="@ViewData["userName"]" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" readonly class="form-control" value="@ViewData["firstName"]" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" readonly class="form-control" value="@ViewData["lastName"]" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly value="@ViewData["email"]" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" readonly class="form-control" value="@ViewData["gender"]" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" readonly class="form-control" type="date" value="@ViewData["dob"]" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="IsPromotion" class="form-check-input" type="checkbox" onclick="return false" checked="@ViewData["promotion"]" />
                <label asp-for="IsPromotion"></label>
                <span asp-validation-for="IsPromotion" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>