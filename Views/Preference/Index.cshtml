@using JYTGameStore;
@model dynamic

<div class="container p-3">

    <ol class="breadcrumb">
        JYTGameStore &gt; Member &gt;&nbsp;
        <span class="font-weight-bold"> Preference</span>
    </ol>

    <h1>@ViewBag.Title</h1>
    <hr />

    <div class="m-2">&nbsp;</div>

    <form method="post" asp-action="UpdateFavoritePlatform">
        <h2>Favorite Platform</h2>
        <hr />
        <div class="row m-2">
            @foreach (CheckBoxItem platform in Model.favoritePlatformList)
            {
                string checkedValue = platform.IsChecked ? "checked" : "";
                <div class="col-4 pl-2 mb-1">
                    <input type="checkbox" id="platform_@platform.CheckId" name="checkFavoritePlatform" value="@platform.CheckId" @checkedValue />
                    <label for="platform_@platform.CheckId" class="ml-1">@platform.CheckTitle</label>
                </div>
            }
        </div>
        <div class="row m-1">
            <div class="col-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-light w-30">Back to Home</a>
            </div>
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-primary w-auto" value="Save Favorite Platform" />
            </div>
            <div class="col-3">&nbsp;</div>
        </div>
        <div class="p-3"></div>
    </form>

    <div class="m-2">&nbsp;</div>

    <form method="post" asp-action="UpdateFavoriteCategory">
        <h2>Favorite Category</h2>
        <hr />
        <div class="row m-2">
            @foreach (CheckBoxItem category in Model.favoriteCategoryList)
            {
                string checkedValue = category.IsChecked ? "checked" : "";
                <div class="col-4 pl-2 mb-1">
                    <input type="checkbox" id="category_@category.CheckId" name="checkFavoriteCategory" value="@category.CheckId" @checkedValue />
                    <label for="category_@category.CheckId" class="ml-1">@category.CheckTitle</label>
                </div>
            }
        </div>
        <div class="row m-1">
            <div class="col-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-light w-30">Back to Home</a>
            </div>
            <div class="col-6 text-center">
                <input type="submit" class="btn btn-primary w-auto" value="Save Favorite Category" />
            </div>
            <div class="col-3">&nbsp;</div>
        </div>
        <div class="p-3"></div>
    </form>

</div>